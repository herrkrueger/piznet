# Patent Intelligence Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# EPO OPS API Credentials
OPS_KEY=your_epo_ops_consumer_key_here
OPS_SECRET=your_epo_ops_consumer_secret_here

# Application Environment
ENVIRONMENT=development  # development, testing, production

# Caching Configuration
CACHE_DIRECTORY=./cache
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/patent_intelligence.log

# Performance Settings
MAX_RESULTS_DEFAULT=10000
BATCH_SIZE=1000